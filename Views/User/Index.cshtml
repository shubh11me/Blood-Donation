@{
    Layout = "";
}
@Html.Partial("top_shared")
@model UserViewModel

<body>
    <div class="page-wrapper">
        <div class="page-content--bge5">
            <div class="container">

                <div class="login-wrap">
                    <div class="login-content">
                        <div class="tab_holder d-flex justify-content-center">
                            <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active nav-link btn btn-danger" id="pills-home-tab" data-toggle="pill" href="#login_div" role="tab" aria-controls="pills-home" aria-selected="true">Login</a>
                                </li>
                                <li class="nav-item ml-3">
                                    <a class="nav-link btn btn-danger" id="pills-profile-tab" data-toggle="pill" href="#reg_div" role="tab" aria-controls="pills-profile" aria-selected="false">Register</a>
                                </li>
                            </ul>
                        </div>
                        <div class="tab-content" id="pills-tabContent">
                            <div class="tab-pane fade show active" id="login_div" role="tabpanel" aria-labelledby="pills-home-tab">
                                <div class="login-logo">

                                    <span class="login_head">Blood Camp-User Login</span>
                                    <img src="~/images/icon/blood_drop.png" width="50" height="50" alt="Bllod Icon">

                                </div>
                                <div class="login-form">
                                    <form asp-action="signinuser" method="post">
                                        <div class="form-group">
                                            <label>Email Address</label>
                                            <input class="au-input au-input--full" type="email" name="email" placeholder="Email">
                                        </div>
                                        <div class="form-group">
                                            <label>Password</label>
                                            <input class="au-input au-input--full" type="password" name="pass" placeholder="Password">
                                        </div>
                                        <br>

                                        <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">
                                            sign
                                            in
                                        </button>
                                    </form>

                                </div>
                            </div>
                            <div class="tab-pane fade" id="reg_div" role="tabpanel" aria-labelledby="pills-profile-tab">
                                <div class="login-content">
                                    <div class="login-logo">

                                        <span class="reg_head">Blood Camp-User Registration</span>
                                        <img src="~/images/icon/blood_drop.png" width="50" height="50" alt="Bllod Icon">

                                    </div>
                                    <div class="login-form">

                                        <form method="post" asp-action="saveUser" role="form">
                                            <div class="form-group">
                                                <label>Name</label>
                                                <input class="au-input au-input--full" type="text" asp-for="Name" placeholder="First Name">


                                            </div>
                                            <div class="form-group">
                                                <label>Blood Group</label>

                                                @Html.DropDownList("blood_group", @ViewData["allBloodGrups"] as IEnumerable<SelectListItem>, "Select one", new { @class = "form-control" })

                                            </div>
                                            <div class="form-group">
                                                <label>Email Address</label>
                                                <input class="au-input au-input--full" type="email" asp-for="Email" placeholder="Email ID">
                                            </div>
                                            <div class="form-group">
                                                <label>Password</label>
                                                <input class="au-input au-input--full" id="password" type="password" asp-for="Password" placeholder="Password">
                                                <!-- </div>
                        <div class="form-group"> -->
                                                <label>Confirm Password</label>
                                                <input class="au-input au-input--full" id="confirm_password" type="password" asp-for="ConfirmPassword" placeholder="Password">
                                            </div>
                                            <div id="message" class="text-center"></div>

                                            <button class="au-btn au-btn--block au-btn--green m-b-20" id="reg_submit" type="submit">register as user</button>

                                        </form>

                                    </div>
                                </div>
                            </div>
                            @{
            if (ViewData["error"]!=null) { 
                                <br />
                                <div class="alert alert-danger" role="alert">
                                    <span class="alert-link">@ViewData["error"]</span>
                                </div>
                                }
                              
                            }
                        </div>
                    </div>
                   
                </div></div>
        </div>

    </div>



    @Html.Partial("Bodyscripts");

    <script asp-append-version="true" src="~/js/main.js"></script>

</body>

</html>